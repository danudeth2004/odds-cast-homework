<div id="<%= dom_id article %>"
     role="link" tabindex="0"
     onclick="window.location='<%= article_path(article) %>'"
     onkeydown="if(event.key==='Enter'){window.location='<%= article_path(article) %>'}"
     class="group relative rounded-2xl border border-sky-400/20
            bg-gradient-to-br from-slate-800/70 via-slate-800/60 to-slate-900/70
            hover:from-slate-800/90 hover:via-slate-800/80 hover:to-slate-900/90
            transition transform duration-200 p-5 flex flex-col text-slate-100
            shadow-md shadow-black/20 hover:shadow-lg hover:shadow-sky-500/20 hover:-translate-y-1
            cursor-pointer focus-visible:outline-none focus-visible:ring-2
            focus-visible:ring-sky-400/70 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-900">

  <!-- Title -->
  <h3 class="text-lg font-semibold leading-snug line-clamp-2 group-hover:text-sky-300 transition break-words">
    <%= article.title %>
  </h3>

  <!-- Description -->
  <p class="mt-3 text-sm text-slate-300/90 line-clamp-4 break-all">
    <%= article.description %>
  </p>

  <!-- Footer -->
  <div class="mt-auto pt-4 flex items-center justify-between">
    <span class="text-xs text-slate-400">
      <%= l(article.updated_at, format: :long) rescue article.updated_at %>
    </span>
    <span class="inline-flex items-center gap-1 text-sm text-sky-300 group-hover:text-sky-200">
      Read
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
      </svg>
    </span>
  </div>
</div>
