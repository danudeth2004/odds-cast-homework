<div class="max-w-3xl w-full mx-auto flex flex-col gap-6">
  <h1 class="font-bold text-3xl md:text-4xl text-white flex items-center gap-2">
    Editing Article
    <% if @article.status == "waiting_for_review" %>
      <span class="rounded-full px-2 py-0.5 text-[11px] font-semibold
                   border border-amber-400/40 bg-amber-500/15 text-amber-200">
        REVIEW
      </span>
    <% else %>
      <span class="rounded-full px-2 py-0.5 text-[11px] font-semibold
                   border border-indigo-400/40 bg-indigo-500/15 text-indigo-200">
        EDIT
      </span>
    <% end %>
  </h1> 

  <%= render "form", article: @article %>
</div>
