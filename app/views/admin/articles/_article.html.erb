<div id="<%= dom_id article %>"
     role="link" tabindex="0"
     onclick="window.location='<%= admin_article_path(article) %>'"
     onkeydown="if(event.key==='Enter'){window.location='<%= admin_article_path(article) %>'}"
     class="group relative rounded-2xl border border-sky-400/20 
            bg-gradient-to-br from-slate-800/70 via-slate-800/60 to-slate-900/70
            hover:from-slate-800/90 hover:via-slate-800/80 hover:to-slate-900/90
            transition transform duration-200 p-5 flex flex-col text-slate-100
            shadow-md shadow-black/20 hover:shadow-lg hover:shadow-sky-500/20 hover:-translate-y-1 cursor-pointer
            focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-sky-400/70
            focus-visible:ring-offset-2 focus-visible:ring-offset-slate-900">

  <!-- Header -->
  <div class="flex items-start justify-between gap-3">
    <h3 class="text-lg font-semibold leading-snug line-clamp-2 group-hover:text-sky-300 transition break-words">
      <%= article.title %>
    </h3>

    <% status_color = {
      "draft" => "bg-slate-700/80 text-slate-200 border-slate-500/50",
      "waiting_for_review" => "bg-amber-500/20 text-amber-300 border-amber-400/30",
      "published" => "bg-emerald-500/20 text-emerald-300 border-emerald-400/30"
    }[article.status.to_s] || "bg-slate-700 text-slate-200 border-slate-500/50" %>

    <span class="whitespace-nowrap rounded-full px-2.5 py-1 text-xs font-medium border <%= status_color %>">
      <%= article.status.humanize %>
    </span>
  </div>

  <!-- Description -->
  <p class="mt-3 text-sm text-slate-300/90 line-clamp-4 break-all">
    <%= article.description %>
  </p>

  <!-- ID -->
  <div class="mt-auto pt-4 flex items-center justify-end">
    <span class="text-xs text-slate-400">ID: <%= article.id %></span>
  </div>
</div>
